<h1 class="text-center mt-4">Available Books</h1>
<div class="container">
  <table class="table table-striped table-bordered mt-4">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.isbn %></td>
          <td>
            <% if book.available %>
              <span class="badge bg-success">Available</span>
            <% else %>
              <span class="badge bg-danger">Borrowed</span>
            <% end %>
          </td>
          <td>
            <%= link_to "View Details", book_path(book), class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
