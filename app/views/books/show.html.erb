<div class="container mt-4">
  <h1 class="text-center"><%= @book.title %></h1>
  <div class="card mt-3">
    <div class="card-body">
      <h5 class="card-title">Author: <%= @book.author %></h5>
      <p class="card-text"><strong>ISBN:</strong> <%= @book.isbn %></p>
      <p><strong>Status:</strong>
        <% if @book.available %>
          <span class="badge bg-success">Available</span>
        <% else %>
          <span class="badge bg-danger">Borrowed</span>
        <% end %>
      </p>

      <% if @book.available %>
        <%= button_to "Borrow This Book", borrow_book_path(@book), method: :post, class: "btn btn-success" %>
      <% else %>
        <p class="text-danger">This book is currently borrowed.</p>
      <% end %>

      <br>
      <%= link_to "Back to Books", books_path, class: "btn btn-secondary mt-2" %>
    </div>
  </div>
</div>
